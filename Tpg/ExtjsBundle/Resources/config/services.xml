<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tpg_extjs.generator.class">Tpg\ExtjsBundle\Service\GeneratorService</parameter>
        <parameter key="tpg.twig.extjs_extension.class">Tpg\ExtjsBundle\Twig\ExtjsExtension</parameter>
        <parameter key="tpg_extjs.remoting.bundles" type="collection"></parameter>
    </parameters>

    <services>
        <service id="tpg_extjs.generator" class="%tpg_extjs.generator.class%">
            <call method="setAnnotationReader">
                <argument type="service" id="annotation_reader"/>
            </call>
            <call method="setTwigEngine">
                <argument type="service" id="twig"/>
            </call>
            <call method="setRemotingBundles">
                <argument>%tpg_extjs.remoting.bundles%</argument>
            </call>
        </service>

        <service id="tpg_extjs.deserialization_associate_relationship_listener" class="Tpg\ExtjsBundle\Listener\DeserializationAssociateRelationship">
            <argument type="service" id="annotation_reader" />

            <tag name="jms_serializer.event_listener" event="serializer.pre_deserialize" />
        </service>

        <service id="tpg.twig.extjs_extension" class="%tpg.twig.extjs_extension.class%">
            <call method="setGenerator">
                <argument type="service" id="tpg_extjs.generator"/>
            </call>
            <call method="setRouter">
                <argument type="service" id="router"/>
            </call>
            <tag name="twig.extension" />
        </service>

        <!-- Serializer service from JMS Serializer -->
        <service id="tpg_extjs.serializer" class="%jms_serializer.serializer.class%">
            <argument type="service" id="jms_serializer.metadata_factory" />
            <argument type="service" id="jms_serializer.handler_registry" />
            <argument type="service" id="jms_serializer.doctrine_object_constructor" />
            <argument type="collection" /><!-- Serialization Visitors -->
            <argument type="collection" /><!-- Deserialization Visitors -->
            <argument type="service" id="jms_serializer.event_dispatcher" />
        </service>

        <service id="tpg_extjs.naming_strategy" class="Tpg\ExtjsBundle\Component\JMSCamelCaseNamingStrategy" public="false"/>

        <!-- Visitors -->
        <service id="tpg_extjs.json_serialization_visitor" class="%jms_serializer.json_serialization_visitor.class%">
            <argument type="service" id="tpg_extjs.naming_strategy" />
            <tag name="tpg_extjs.serialization_visitor" format="json" />
        </service>

        <service id="tpg_extjs.json_deserialization_visitor" class="%jms_serializer.json_deserialization_visitor.class%">
            <argument type="service" id="tpg_extjs.naming_strategy" />
            <argument type="service" id="jms_serializer.doctrine_object_constructor" />
            <tag name="tpg_extjs.deserialization_visitor" format="json" />
        </service>
    </services>
</container>
